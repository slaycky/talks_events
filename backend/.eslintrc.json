{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": ["error", { "allow": ["error", "info"] }],
    "import/no-extraneous-dependencies": "off",
    "no-await-in-loop": "off",
    "no-continue": "off"
  }
}
